<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:baselineAligned="false" android:orientation="horizontal">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray">
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:id="@+id/graph"
                     android:background="@android:color/darker_gray" android:layout_above="@+id/start"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_to_gallary"
                android:id="@+id/save_to_gallary"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp" android:paddingTop="8dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:choiceMode="singleChoice"/>
</LinearLayout>